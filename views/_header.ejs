<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<div class="nav">
    <div class="title"> 
        <a href="/">Habit Tracker</a>
    </div>
    <% if (locals.user){ %>
        <div class="userPresent">
            <div class="nameOfUser">
                <%= user.name%>
                <a href="/habits/dashboard" class="dashboard-link">Dashboard</a>
            </div>
            <hr>
            <div class="logOut"> <a href="/users/sign-out" > <i class="fa-solid fa-arrow-right-from-bracket" style="color: #e9f2ff;"></i> </a> </div>
        </div>
        <%} else { %>
            <div class="noUser">
                <ul>
                    <li> <a href="/users/sign-in"> Sign In </a> </li>
                    <hr>
                    <li> <a href="/users/sign-up"> Sign Up </a> </li>
                </ul>
            </div>
        
        <%}%>   

</div>